<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SansBold" parent="@android:style/TextAppearance">
        <item name="fontPath">Fonts/SourceSansPro-Bold.otf</item>
    </style>

    <style name="SansRegular" parent="@android:style/TextAppearance">
        <item name="fontPath">Fonts/SourceSansPro-Regular.otf</item>
    </style>

</resources>
